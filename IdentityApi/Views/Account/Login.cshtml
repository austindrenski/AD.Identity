@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using AD.Identity.Models
@using IdentityApi.Models
@using Microsoft.AspNetCore.Identity
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-controller="Account" asp-action="Login" method="post">

                <input type="hidden" name="return-url" value="@ViewData["return-url"]"/>

                <h4>Use a local account to log in.</h4>

                <hr/>

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="input-group">

                    <div class="form-group">
                        <label asp-for="Email" class="input-group-addon">@Html.DisplayNameFor(x => x.Email)</label>
                        <input asp-for="Email" class="form-control"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">

                        <label asp-for="Password" class="input-group-addon">@Html.DisplayNameFor(x => x.Password)</label>
                        <input asp-for="Password" class="form-control"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="RememberLogin" class="input-group-addon">@Html.DisplayNameFor(x => x.RememberLogin)</label>
                            <input asp-for="RememberLogin"/>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-default">Log in</button>
                </div>

            </form>

            <div class="form-group">
                <p>
                    <a asp-action="ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <a asp-action="Register" asp-route-returnurl="@ViewData["return-url"]">Register as a new user?</a>
                </p>
            </div>

        </section>
    </div>
</div>