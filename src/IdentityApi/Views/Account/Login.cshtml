@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using IdentityApi.Models
@model LoginViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Identity";
    string returnUrl = (string) ViewData["return-url"] ?? "/api";
}
<h2>Login</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-controller="Account" asp-action="Login" method="post">

                @Html.AntiForgeryToken()

                <input type="hidden" name="return-url" value="@returnUrl"/>

                <h4>Use a local account to log in.</h4>

                <hr/>

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="input-group">
                    <div class="form-group">
                        <label name="email" class="input-group-addon">Email</label>
                        <input name="email" class="form-control"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label name="password" class="input-group-addon">Password</label>
                        <input name="password" class="form-control"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-secondary">Log in</button>

            </form>

            <div class="form-group">
                <p>
                    <a asp-controller="Account" asp-action="ForgotPassword" asp-route-return-url="@returnUrl">Forgot your password?</a>
                </p>
                <p>
                    <a asp-controller="Account" asp-action="Register" asp-route-return-url="@returnUrl">Register as a new user?</a>
                </p>
            </div>
        </section>
    </div>
</div>